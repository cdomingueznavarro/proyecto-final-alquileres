        </navigation-case>
        <navigation-case>
            <from-outcome>cuentaUsuario</from-outcome>
            <to-view-id>/vistas/usuario/cuentaUsuario.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>nuevaPublicacion</from-outcome>
            <to-view-id>/vistas/usuario/nuevaPublicacion.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
